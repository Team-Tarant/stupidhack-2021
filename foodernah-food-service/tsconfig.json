{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "rootDirs": ["./src"],
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
